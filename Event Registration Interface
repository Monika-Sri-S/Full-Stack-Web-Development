App.jsx
import React from "react";
import "./app.css";

function App() {
  const registerEvent = () => {
    alert("Welcome to the Event Registration Portal!");

    const name = prompt("Enter your full name:");
    if (!name) {
      alert("Registration canceled. Name is required.");
      return;
    }

    const email = prompt("Enter your email address:");
    if (!email) {
      alert("Registration canceled. Email is required.");
      return;
    }

    const eventName = prompt("Enter the event name you want to register for:");
    if (!eventName) {
      alert("Registration canceled. Event name is required.");
      return;
    }

    const confirmRegistration = window.confirm(
      `Please confirm your registration:\n\nName: ${name}\nEmail: ${email}\nEvent: ${eventName}`
    );

    if (confirmRegistration) {
      alert(`Thank you ${name}! You are successfully registered for "${eventName}".`);
    } else {
      alert("Registration canceled.");
    }
  };

  return (
    <div className="container">
      <h1>Event Registration</h1>
      <button onClick={registerEvent}>Register Now</button>
    </div>
  );
}

export default App;

