App.jsx
import React from "react";
import "./app.css";

function App() {
  const bookHotel = () => {
    alert("Welcome to the Hotel Reservation System!");

    const name = prompt("Enter your full name:");
    if (!name) {
      alert("Reservation canceled. Name is required.");
      return;
    }

    const rooms = prompt("How many rooms would you like to book?");
    if (!rooms || isNaN(rooms) || rooms <= 0) {
      alert("Invalid number of rooms. Reservation canceled.");
      return;
    }

    const nights = prompt("How many nights will you stay?");
    if (!nights || isNaN(nights) || nights <= 0) {
      alert("Invalid number of nights. Reservation canceled.");
      return;
    }

    const confirmBooking = window.confirm(
      `Please confirm your booking:\nName: ${name}\nRooms: ${rooms}\nNights: ${nights}`
    );

    if (confirmBooking) {
      alert(`Thank you ${name}! Your booking for ${rooms} room(s) for ${nights} night(s) is confirmed.`);
    } else {
      alert("Booking canceled.");
    }
  };

  return (
    <div className="container">
      <h1>Hotel Reservation System</h1>
      <button onClick={bookHotel}>Book Now</button>
    </div>
  );
}

export default App;

